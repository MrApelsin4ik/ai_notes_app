<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_background">

    <!-- Чекбоксы -->
    <CheckBox
        android:id="@+id/checkbox_conspect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Конспект" />

    <CheckBox
        android:id="@+id/checkbox_thesis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Тезисный план" />

    <CheckBox
        android:id="@+id/checkbox_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Краткие итоги" />

    <CheckBox
        android:id="@+id/checkbox_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Тест" />

    <!-- Линия-разделитель -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BDBDBD"
        android:layout_marginVertical="8dp"/>

    <!-- Кнопка Удалить с иконкой мусорки -->
    <LinearLayout
        android:id="@+id/deleteButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_delete"
            android:tint="#FF0000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Удалить"
            android:textColor="#FF0000"
            android:layout_marginStart="8dp"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>
